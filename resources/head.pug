-
  let ogTitle = "Train Text"; // Default title
  // Check if departureObject exists before accessing its properties
  if (typeof departureObject !== 'undefined' && departureObject) {
    if (departureObject.fromStation && departureObject.toStation) {
      ogTitle = "Train Text: " + departureObject.fromStation.stationName + " to " + departureObject.toStation.stationName;
    } else if (departureObject.fromStation) {
      ogTitle = "Train Text: " + departureObject.fromStation.stationName;
    }
  }
meta(property="og:title" content=ogTitle)
meta(property="og:description" content="A data-friendly train times service for Great Britain.")
meta(property="og:type" content="website")
meta(property="og:image" content=stationCodePath+"android-chrome-192x192.png")

